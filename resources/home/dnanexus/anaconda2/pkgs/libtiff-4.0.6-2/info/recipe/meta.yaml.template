package:
  name: libtiff
  version: 4.0.6

source:
  fn: tiff-4.0.6.tar.gz
  url: ftp://ftp.remotesensing.org/pub/libtiff/tiff-4.0.6.tar.gz
  md5: d1d2e940dea0b5ad435f21f03d96dd72
  patches:
    - def_snprintf.patch

build:
  number: 2
  features:
    - vc9         [win and py27]
    - vc10        [win and py34]
    - vc14        [win and py35]

requirements:
  build:
    - zlib 1.2.*
    - jpeg 8d
    - xz 5.2.*    [not win]
    - jbig 2.1    [not win]
  run:
    - zlib 1.2.*
    - jpeg 8d
    - xz 5.2.*    [not win]
    - jbig 2.1    [not win]

about:
  home: http://www.libtiff.org/
  license: BSD-like (http://www.libtiff.org/misc.html)
  license_family: BSD
  summary: Support for Tag Image File Format (TIFF)
  description: |
    This software provides support for the Tag Image File Format (TIFF), a
    widely used format for storing image data.
  doc_url: http://www.libtiff.org/document.html
